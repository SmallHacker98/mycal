<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Business PWA Calendar</title>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; margin: 0; padding: 20px; background: #f4f7f6; }
        #calendar-container { background: white; padding: 20px; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        .controls { margin-bottom: 20px; display: flex; gap: 10px; }
        button { padding: 10px 20px; border: none; border-radius: 6px; cursor: pointer; font-weight: 600; }
        .btn-export { background: #0078d4; color: white; } /* Outlook Blue */
        .fc-day-sun { background-color: #fff0f0; } /* 日曜 */
        .fc-day-sat { background-color: #f0f7ff; } /* 土曜 */
        .holiday-name { font-size: 0.75em; color: #d32f2f; margin-left: 5px; }
    </style>
</head>
<body>

    <div class="controls">
        <button class="btn-export" onclick="exportCalendar()">Outlook/macOSへ書き出し (.ics)</button>
    </div>

    <div id="calendar-container">
        <div id="calendar"></div>
    </div>

    <script>
        let calendar;
        const storageKey = 'pwa-calendar-events';

        // 祝日データ（本来はAPIやライブラリから取得）
        const holidays = {
            "2026-01-01": "元日", "2026-01-12": "成人の日", "2026-02-11": "建国記念の日",
            "2026-02-23": "天皇誕生日", "2026-04-29": "昭和の日", "2026-05-03": "憲法記念日"
        };

        document.addEventListener('DOMContentLoaded', function() {
            const calendarEl = document.getElementById('calendar');
            
            calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'ja',
                editable: true,
                selectable: true,
                events: JSON.parse(localStorage.getItem(storageKey) || '[]'),
                
                // 祝日の表示設定
                dayCellContent: function(arg) {
                    const dateStr = arg.date.toISOString().split('T')[0];
                    if (holidays[dateStr]) {
                        return { html: `<div>${arg.dayNumberText}<span class="holiday-name">${holidays[dateStr]}</span></div>` };
                    }
                },

                // 予定の追加
                select: function(info) {
                    const title = prompt('予定を入力してください:');
                    if (title) {
                        const newEvent = { title, start: info.startStr, end: info.endStr, allDay: info.allDay };
                        calendar.addEvent(newEvent);
                        saveEvents();
                    }
                    calendar.unselect();
                }
            });

            calendar.render();
        });

        function saveEvents() {
            const events = calendar.getEvents().map(e => ({
                title: e.title, start: e.startStr, end: e.endStr, allDay: e.allDay
            }));
            localStorage.setItem(storageKey, JSON.stringify(events));
        }

        // iCalendarエクスポート機能
        function exportCalendar() {
            const events = calendar.getEvents();
            let icsMsg = ["BEGIN:VCALENDAR", "VERSION:2.0", "PRODID:-//PWA//JP", "METHOD:PUBLISH"];
            
            events.forEach(event => {
                const start = event.start.toISOString().replace(/[-:]/g, '').split('.')[0] + "Z";
                const end = (event.end || event.start).toISOString().replace(/[-:]/g, '').split('.')[0] + "Z";
                icsMsg.push("BEGIN:VEVENT", `SUMMARY:${event.title}`, `DTSTART:${start}`, `DTEND:${end}`, "END:VEVENT");
            });

            icsMsg.push("END:VCALENDAR");
            const blob = new Blob([icsMsg.join("\r\n")], { type: "text/calendar" });
            const url = URL.createObjectURL(blob);
            const a = document.createElement("a");
            a.href = url;
            a.download = "my_schedule.ics";
            a.click();
        }
    </script>
</body>
</html>
